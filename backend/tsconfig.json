{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",               // Must match moduleResolution
    "moduleResolution": "Node16",     // Or use "NodeNext"
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true                 // Recommended for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}